#!/bin/bash
echo "Content-type: text/html"
echo ""
if [ ! -z $QUERY_STRING ]
then
mensa=${QUERY_STRING//+/ } 
mensa=${mensa//%20/ } 
echo "<h2>Speiseplan $mensa</h2><ul class='mensa'>"
curl -k -s http://www.studentenwerk-dresden.de/feeds/speiseplan.rss | xmlstarlet sel -T -t -m "/rss/channel/item[author='$mensa']" -o "<li class='mensaessen'>" -c "description" -o "</li>"
echo "</ul>"
else
echo "Bitte Mensa per GET-Query angeben."
fi
