#!/bin/bash
echo "Content-type: text/html"
echo ""
if [ ! -z $QUERY_STRING ]
then
echo "<h2>Speiseplan $QUERY_STRING</h2><ul class='mensa'>"
curl -k -s http://www.studentenwerk-dresden.de/feeds/speiseplarss | xmlstarlet sel -T -t -m "/rss/channel/item[author='$QUERY_STRING']" -o "<li class='mensaessen'>" -c "description" -o "</li>
echo "</ul>"
else
echo "Bitte Mensa per GET-Query angeben."
fi
